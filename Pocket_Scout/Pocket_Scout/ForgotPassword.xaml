<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Scout.ForgotPassword">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Margin="40">
            <Label FontSize="30" Text="Forgot Password?"/>
            <Label Text="Enter your email to request a password reset: " />
            <Entry x:Name="emailEntry"></Entry>
            <Button Text="Send Email" Clicked="ForgotButtonClicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>