<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Scout.GroupManager"
             Title="Group Manager">
    <StackLayout Orientation="Vertical" x:Name="AddMemberView">
        <SearchBar x:Name="MemberSearchBar" HeightRequest="42"
                   SearchButtonPressed="MemberSearchBar_SearchButtonPressed"/>

        <ListView x:Name="SearchResultList"/>
    </StackLayout>

    <StackLayout x:Name="CurrentGroupView">
        <StackLayout Orientation="Horizontal">
            <Label Text="Current Group" FontSize="Large" FontAttributes="Bold" Margin="10" VerticalOptions="End"/>
            <Image Source="PlusPicture.png" Opacity="1" BackgroundColor="Transparent" HorizontalOptions="End" VerticalOptions="End" Aspect="AspectFit" Margin="10" HeightRequest="30">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer 
                            Tapped="MakeNewGroup">
                    </TapGestureRecognizer>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
        <BoxView Color="Black" HeightRequest="1"/>
        <ListView x:Name="GroupMemberList" HasUnevenRows="True" SeparatorVisibility="Default" SeparatorColor="Black"/>
    </StackLayout>
    <StackLayout x:Name="InviteGroupView">
        <StackLayout Orientation="Horizontal"> 
            <Label Text="Current Invites" FontSize="Large" FontAttributes="Bold" Margin="10" VerticalOptions="EndAndExpand"/>
            <Image Source="PlusPicture.png" Opacity="1" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Aspect="AspectFit" Margin="10" HeightRequest="30">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer 
                                Tapped="MakeNewGroup">
                    </TapGestureRecognizer>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
        <BoxView Color="Black" HeightRequest="1"/>
        <ListView x:Name="InvitesList" HasUnevenRows="True" SeparatorVisibility="Default" SeparatorColor="Black" ItemTapped="InvitesList_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Username}" FontSize="Medium"/>
                            <Button Text="Accept" IsVisible="{Binding IsVisible}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>