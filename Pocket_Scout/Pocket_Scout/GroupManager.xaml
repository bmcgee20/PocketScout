<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Scout.GroupManager"
             Title="Group Manager">
    <StackLayout Orientation="Vertical" x:Name="AddMemberView">
        <SearchBar x:Name="MemberSearchBar" HeightRequest="42"
                   SearchButtonPressed="MemberSearchBar_SearchButtonPressed"/>

        <ListView x:Name="SearchResultList"/>
    </StackLayout>

    <StackLayout x:Name="CurrentGroupView">
        <Label Text="Current Group"/>
        <ListView x:Name="GroupMemberList" HasUnevenRows="True" SeparatorVisibility="None"/>
    </StackLayout>
    <StackLayout x:Name="InviteGroupView">
        <Label Text="Current Invites"/>
        <ListView x:Name="InvitesList" HasUnevenRows="True" SeparatorVisibility="None"/> 
    </StackLayout>
</ContentPage>