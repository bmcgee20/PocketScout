<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Scout.ChatGroupPage"
             Title="Group Members">
    <ListView x:Name="MessageLister" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <!--Defines what items in listview look like-->
            <DataTemplate>
                <ViewCell>
                    <Grid BackgroundColor="White">
                        <StackLayout Orientation="Vertical" Padding="10" BackgroundColor="Wheat">
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding LastOnline}"/>
                        </StackLayout>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
     </ListView>

</ContentPage>