<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pocket_Scout.CampingListPage"
             Title="Camping List">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Grid Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Item" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Center"/>
                    <Label Text="Quantity" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center"/>
                    <Label Text="Person" Grid.Row="0" Grid.Column="2"  HorizontalOptions="Center"/>
                    <BoxView HeightRequest="1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" BackgroundColor="Black" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
                    <Image Source="PlusPicture.png" Grid.Row="2" Grid.Column="3" HeightRequest="30"/>
                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>